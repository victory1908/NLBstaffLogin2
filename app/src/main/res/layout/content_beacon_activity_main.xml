<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/beacon_activity_main"
    tools:context="victory1908.nlbstafflogin2.beaconstac.Beacon_MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_staffid"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/event_View"
        android:layout_below="@id/textView_staffid"
        android:visibility="invisible">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="EventTitle"
            android:id="@+id/textView_EventTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spinner"
            android:padding="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="EventDescription"
            android:id="@+id/textView_EventDesc"
            android:layout_below="@+id/textView_EventTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="15dp"/>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="EventTime"
            android:id="@+id/textView_EventTime"
            android:layout_below="@+id/textView_EventDesc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="15dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEventTitle"
            android:padding="15dp"
            android:layout_alignBottom="@+id/textView_EventTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView_EventDesc"
            android:layout_toRightOf="@+id/textView_EventDesc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEventDesc"
            android:padding="15dp"
            android:layout_below="@+id/textViewEventTitle"
            android:layout_toRightOf="@+id/textView_EventDesc"
            android:layout_alignRight="@+id/textViewEventTitle"
            android:layout_alignEnd="@+id/textViewEventTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEventTime"
            android:padding="15dp"
            android:layout_below="@+id/textViewEventDesc"
            android:layout_toRightOf="@+id/textView_EventDesc"
            android:layout_alignRight="@+id/textViewEventTitle"
            android:layout_alignEnd="@+id/textViewEventTitle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check In"
            android:id="@+id/Check_in"
            android:layout_below="@id/textViewEventTime"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp"
        android:text="Beacons Ranged: "
        android:id="@+id/RangedView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300sp"
        android:text="Camped: 0"
        android:id="@+id/CampedView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/beaconListView"
    android:layout_below="@id/RangedView"/>


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0"
    android:id="@+id/beaconCount"
    android:layout_toRightOf="@id/RangedView"
    android:layout_marginTop="300sp"/>


</RelativeLayout>
