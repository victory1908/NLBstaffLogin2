    <!--<include layout="@layout/content_register_beacon"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.AppCompatTextView
                        android:text="Beacon Name"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/beaconName"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TableRow>
                        <android.support.v7.widget.AppCompatTextView
                            android:text="Beacon ID"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/beaconID"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </TableRow>
                    <TableRow>
                        <android.support.v7.widget.AppCompatTextView
                            android:text="Beacon SN"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/beaconSN"
                            android:padding="5dp"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"/>
                    </TableRow>

                    <TableRow>
                        <android.support.v7.widget.AppCompatTextView
                            android:text="Beacon Major"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/beaconMajor"
                            android:padding="5dp"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"/>
                    </TableRow>
                    <TableRow>
                        <android.support.v7.widget.AppCompatTextView
                            android:text="Beacon Minor"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/beaconMinor"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow>
                        <android.support.v7.widget.AppCompatTextView
                            android:text="Beacon UUID"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/beaconUUID"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerBeacon"
            android:layout_below="@+id/tableLayout"
            android:layout_centerHorizontal="true"
            android:text="Register Beacon"/>

    </RelativeLayout>

