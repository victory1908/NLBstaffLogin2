<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ManageBeaconFragment.FragmentEditBeaconDetail"
    tools:showIn="@layout/fragment_edit_register_beacon_detail">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatTextView
                    android:text="Beacon Name"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/beaconName"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TableRow>
                    <android.support.v7.widget.AppCompatTextView
                        android:text="Beacon ID"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/beaconID"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow>
                    <android.support.v7.widget.AppCompatTextView
                        android:text="Beacon SN"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/beaconSN"
                        android:padding="5dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"/>
                </TableRow>

                <TableRow>
                    <android.support.v7.widget.AppCompatTextView
                        android:text="Beacon Major"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/beaconMajor"
                        android:padding="5dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"/>

                </TableRow>
                <TableRow>
                    <android.support.v7.widget.AppCompatTextView
                        android:text="Beacon Minor"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/beaconMinor"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow>
                    <android.support.v7.widget.AppCompatTextView
                        android:text="Beacon UUID"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/beaconUUID"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </TableLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editRegisterBeacon"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:text="Edit Register Beacon"/>
    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteRegisterBeacon"
        android:layout_below="@+id/editRegisterBeacon"
        android:layout_centerHorizontal="true"
        android:text="Delete Register Beacon"/>

</RelativeLayout>
